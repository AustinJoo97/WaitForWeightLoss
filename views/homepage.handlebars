<link
        rel="stylesheet"
        href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        />
        <title>Overview</title>
    </head>
    <body>
        <div class="jumbotron">
            <h1 class="display-4">Hello, Welcome Back {{user.username}}!</h1>
            <button type="button" class="btn btn-success" id="in_depth_button">In Depth Results</button>
            <button type="button" class="btn btn-success" id="logout">Sign Out</button>
        </div>
        
        <body class="bg-default">
                <div class="header-body">
                  <div class="row">
                    <div class="col-xl-3 col-lg-6">
                      <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                          <div class="row">
                            <div class="col">
                              <h5 class="card-title text-uppercase text-muted mb-0">Current Weight</h5>
                              <span class="h2 font-weight-bold mb-0">{{weight.weight}}</span>
                            </div>
                          </div>
                          <p class="mt-3 mb-0 text-muted text-sm">
                            <span class="text-nowrap">Last Reported: {{formatDate weight.date_reported}}</span>
                          </p>
                        </div>
                    </div>
                    </div>
                    <div class="col-xl-3 col-lg-6">
                      <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                          <div class="row">
                            <div class="col">
                              <h5 class="card-title text-uppercase text-muted mb-0">Highest Weight of</h5>
                              <span class="h2 font-weight-bold mb-0">{{highest}}</span>
                            </div>
                            <div class="col-auto">
                              <div class="icon icon-shape bg-warning text-white rounded-circle shadow">
                              </div>
                            </div>
                          </div>
                          <p class="mt-3 mb-0 text-muted text-sm">
                            <span class="text-nowrap"></span>
                          </p>
                        </div>
                      </div>
                    </div>
                    <div class="col-xl-3 col-lg-6">
                      <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                          <div class="row">
                            <div class="col">
                              <h5 class="card-title text-uppercase text-muted mb-0">Goal Weight</h5>
                              <span class="h2 font-weight-bold mb-0">{{user.goal_weight}}</span>
                            </div>
                            <div class="col-auto">
                              <div class="icon icon-shape bg-yellow text-white rounded-circle shadow">
                              </div>
                            </div>
                          </div>
                          <p class="mt-3 mb-0 text-muted text-sm">
                            <span class="text-warning mr-2"></span>
                            <span class="text-nowrap">For the year</span>
                          </p>
                        </div>
                      </div>
                    </div>
                    
             
                    <div class="col-xl-3 col-lg-6">
                      <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                          <div class="row">
                            <div class="col">
                              <h5 class="card-title text-uppercase text-muted mb-0">(etc)</h5>
                              <span class="h2 font-weight-bold mb-0">000</span>
                            </div>
                            <div class="col-auto">
                              <div class="icon icon-shape bg-info text-white rounded-circle shadow">
                
                              </div>
                            </div>
                          </div>
                          <p class="mt-3 mb-0 text-muted text-sm">
                            <span class="text-nowrap">Since last month</span>
                          </p>
                        </div>
                      </div>
                    </div>
                  
                </div>
                <br>
                <br>
                <form id='currentWeightForm'>
                    <h5> Current Weight</h5>
                    <input type="number" placeholder="Current Weight" id="currentWeight">
                    <button class="button is-info is-light" onclick="addWeight()" id="currentWeightAdd">Add</button>
                </form>
                <br>
                <br>
                <br>
                <br>
                <form id='goalWeightForm'>
                    <h5>Add/Update Goal Weight</h5>
                    <input type="number" placeholder="Goal Weight" id="goalWeight">
                    <button class="button is-info is-light" onclick="addGoal()" id="addUpdateGoal">Add</button>
                </form>
            </div>
    
    </body>
    <script src='/js/homeFunc.js'></script>
</html>
